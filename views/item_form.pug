extends layout

block content
    h1=title

    form(method='POST' action='')
        div 
            label(for='category') Item:
            select(type='select' placeholder='Select category' name='category' required='true')
                - category_list.sort(function(a, b) {let textA = a.name.toUpperCase(); letB = b.name.toUpperCase(); return (textA < TextB) ? -1 : (textA > textB) ? 1 : 0;});
                for category in category_list
                    if item
                        option(value=category._id selected=(item.category.toString()==category._is.toString() ? 'selected' : false)) #{category.name}
                    else
                        option(value=category._id) #{category.name}
        div
            label(for='name') Name:
            input(type='text' placeholder='Name' name='name' required='true' value=(undefined===item ? '' : item.name))
        div
            label(for='description') Description:
            input(type='text' placeholder='Description' name='description' required='true' value=(undefined===item ? '' : item.description))
        div
            label(for='price') Price:
            input(type='number' placeholder='Price' name='price' required='true' value=(undefined===item ? '' : item.price))
        div
            label(for='stock') Stock:
            input(type='number' placeholder='Stock' name='stock' required='true' value=(undefined===item ? '' : item.stock))
        button(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg