extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div
            label(for='name') Category:
            input(type='text' placeholder='Category name' name='name' value=(undefined===category ? '' : category.name))
            label(for='description') Description:
            input(type='text' placeholder='Category description' name='description' value=(undefined===category ? '' : category.name))
        button(type='submit') Submit
    
    if errors
        ul
            for error in errors
                li!=error.msg